<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:orientation="vertical"
    android:padding="30dp">

    <TextView
        android:id="@+id/textView_means_of_payment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal"
        android:text="Moyen de paiement"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editText_cc_last_name"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:background="@color/Color_editText"
        android:ems="10"
        android:hint="Nom"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editText_cc_first_name"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:background="@color/Color_editText"
        android:ems="10"
        android:hint="Prénom"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editText_cc_number"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:background="@color/Color_editText"
        android:ems="10"
        android:hint="Numéro de carte"
        android:inputType="number" />

    <LinearLayout
        android:id="@+id/linear_layout_expiration_date"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_expiration_date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Date  de Validité" />

        <EditText
            android:id="@+id/editText_month"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/Color_editText"
            android:ems="10"
            android:gravity="center_vertical|center_horizontal"
            android:hint="MM"
            android:inputType="numberSigned" />

        <EditText
            android:id="@+id/editText_year"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/Color_editText"
            android:ems="10"
            android:gravity="center_vertical|center_horizontal"
            android:hint="AAAA"
            android:inputType="numberSigned" />

    </LinearLayout>

    <EditText
        android:id="@+id/editText_cc_cvv"
        android:layout_width="85dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/Color_editText"
        android:ems="10"
        android:gravity="center"
        android:hint="CVV"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/button_validate"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_weight="1"
        android:background="@drawable/button"
        android:text="Valider"
        android:textColor="@color/Color_continue" />

</LinearLayout>